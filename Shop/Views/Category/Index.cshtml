@*@model List<Shop.Context.Category_2119110245>*@
@model Shop.Models.HomeModel
@{
    ViewBag.Title = "Danh mục sản phẩm";
    Layout = "~/Views/Shared/_Layout01.cshtml";
}

<style>
    .card-title {
        text-align: Bcenter;
    }
</style>

    <!-- ========================= SECTION CONTENT ========================= -->
    <section class="section-content padding-y">
        <div class="container">

            <nav class="row">
                @foreach (var item in Model.listCategory)
                {
                    var url_cate = "/san-pham/danh-muc/danh-sach/" + item.Slug + "-" + item.CategoryId;
                    <div class="col-md-3">
                        <div class="card card-category">
                            <a href="@url_cate)" class="img-wrap" style="background: #e3dfdf; width:100%">
                                <img src="~/Public/images/category/@item.Avatar">
                            </a>
                            <div class="card-body">
                                <h4 class="card-title"><a href="@url_cate">@item.CategoryName</a></h4>
                            </div>
                        </div>
                    </div> <!-- col.// -->
                }
            </nav> <!-- row.// -->


        </div> <!-- container .//  -->
    </section>
    <!-- ========================= SECTION CONTENT END// ========================= -->
