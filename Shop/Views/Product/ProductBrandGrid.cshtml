@model Shop.Models.ProductBrandModel
@{
    foreach (var item in Model.listBrand) { ViewBag.Title = item.BrandName; }
    Layout = "~/Views/Shared/_Layout01.cshtml";
}
<style>
    .btn-color {
        background-color: #ffa600;
        color: white;
        outline: 1px solid #000000;
        font-size: 16px;
        font-family: 'Poppins', sans-serif;
    }
    .btn-color:hover{
        color:#000;
        background-color:#ffa600;
    }
</style>

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
    <div class="container">


        <!-- ============================  FILTER TOP  ================================= -->
        <div class="card mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">Bạn đang ở: </div> <!-- col.// -->
                    <nav class="col-md-8" style="font-family: 'Poppins', sans-serif;">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Brand")">Thương hiệu</a></li>
                            @foreach (var itemBrand in Model.listBrand)
                            {
                                <li class="breadcrumb-item">@itemBrand.BrandName</li>
                            }
                            @*<li class="breadcrumb-item active" aria-current="page">Items</li>*@
                        </ol>
                    </nav> <!-- col.// -->
                </div> <!-- row.// -->
                <hr>
                <div class="row">
                    <div class="col-md-2">Lọc theo:</div> <!-- col.// -->
                    <div class="col-md-10">
                        <ul class="list-inline">
                            <li class="list-inline-item mr-3 dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">   Supplier type </a>
                                <div class="dropdown-menu p-3" style="max-width:400px;">
                                    <label class="form-check">
                                        <input type="radio" name="myfilter" class="form-check-input"> Good supplier
                                    </label>
                                    <label class="form-check">
                                        <input type="radio" name="myfilter" class="form-check-input"> Best supplier
                                    </label>
                                    <label class="form-check">
                                        <input type="radio" name="myfilter" class="form-check-input"> New supplier
                                    </label>
                                </div> <!-- dropdown-menu.// -->
                            </li>
                            <li class="list-inline-item mr-3 dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">  Danh mục </a>
                                <div class="dropdown-menu p-3">
                                    @foreach (var item in Model.listCategory)
                                    {
                                        <label class="form-check" >  <input type="checkbox" class="form-check-input"> @item.CategoryName     </label>
                                    }
                                </div> <!-- dropdown-menu.// -->
                            </li>
                            @*<li class="list-inline-item mr-3 dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Feature</a>
                                    <div class="dropdown-menu">
                                        <a href="" class="dropdown-item">Anti backterial</a>
                                        <a href="" class="dropdown-item">With buttons</a>
                                        <a href="" class="dropdown-item">Extra safety</a>
                                    </div>
                                </li>
                                <li class="list-inline-item mr-3"><a href="#">Color</a></li>
                                <li class="list-inline-item mr-3"><a href="#">Size</a></li>*@
                            <li class="list-inline-item mr-3">
                                <div class="form-inline">
                                    <label class="mr-2">Giá:</label>
                                    <input class="form-control form-control-sm" placeholder="Min" type="number">
                                    <span class="px-2"> - </span>
                                    <input class="form-control form-control-sm" placeholder="Max" type="number">
                                    <button type="submit" class="btn btn-sm btn-light ml-2 btn-color">Lọc</button>
                                </div>
                            </li>
                            @*<li class="list-inline-item mr-3">
                                <label class="custom-control mt-1 custom-checkbox">
                                    <input type="checkbox" class="custom-control-input">
                                    <div class="custom-control-label">
                                        Ready to ship
                                    </div>
                                </label>
                            </li>*@
                        </ul>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- card-body .// -->
        </div> <!-- card.// -->
        <!-- ============================ FILTER TOP END.// ================================= -->

        <header class="mb-3">
            <div class="form-inline">
                <strong class="mr-md-auto">
                    @if (@Model.listProduct.Count() <= 0)
                    {<span>Not found</span>}
                    else
                    {@Model.listProduct.Count() <span>Sản phẩm được tìm thấy</span>}
                </strong>
                <select class="mr-2 form-control">
                    <option>Latest items</option>
                    <option>Trending</option>
                    <option>Most Popular</option>
                    <option>Cheapest</option>
                </select>
                <div class="btn-group">
                    @{
                        var id = Model.Id;
                        var slug = Model.Slug;
                        var url_brandlist = "/san-pham/thuong-hieu/danh-sach/"+slug+"-"+id;
                        var url_brandgrid = "/san-pham/thuong-hieu/luoi/"+slug+"-"+id;
                    }
                    <a href="@url_brandlist" class="btn btn-light" data-toggle="tooltip" title="List view">
                        <i class="fa fa-bars"></i>
                    </a>
                    <a href="@url_brandgrid" class="btn btn-light active" data-toggle="tooltip" title="Grid view">
                        <i class="fa fa-th"></i>
                    </a>
                </div>
            </div>
        </header><!-- sect-heading -->

        <div class="row">
            @foreach (var item in Model.listProduct)
            {
                var urlLink = "/chi-tiet/" + @item.Slug + "-" + @item.Id;
                <div class="col-md-3">
                    <figure class="card card-product-grid">
                        <div class="img-wrap">
                            @*<span class="badge badge-danger"> NEW </span>*@
                            <a href="@urlLink"> <img src="~/Public/images/product/@item.Avatar" alt="@item.Name"></a>
                        </div> <!-- img-wrap.// -->
                        <figcaption class="info-wrap">
                            <a href="@urlLink" class="title mb-2">@item.Name</a>
                            <div class="price-wrap">
                                @if (item.PriceDiscount == null)
                                {

                                    <span class="price">@Convert.ToDecimal(item.Price).ToString("#,##0")<sup>đ</sup></span>
                                }
                                else
                                {
                                    <span class="price" style="color:red;">@Convert.ToDecimal(item.PriceDiscount).ToString("#,##0")<sup>đ</sup></span> <span> - </span>
                                    <span class="price" style="text-decoration-line:line-through; font-weight:400;">@Convert.ToDecimal(item.Price).ToString("#,##0")<sup>đ</sup></span>
                                }
                                <small class="text-muted">/sản phẩm</small>
                            </div> <!-- price-wrap.// -->
                            @* Số lượng *@
                            @if (item.Quantity >= 1)
                            {
                                if (item.Quantity.ToString().Length < 2)
                                {
                                    <p class="mb-2"> Số lượng: <span>0</span>@item.Quantity <small class="text-muted">(thiết bị)</small></p>
                                }
                                else
                                {
                                    <p class="mb-2"> Số lượng: @item.Quantity <small class="text-muted">(thiết bị)</small></p>
                                }
                            }
                            else
                            {
                                <p class="mb-2"> Sản phẩm tạm thời hết hàng </p>
                            }
                            <!--Brand-->
                            @foreach (var itemCate in Model.listCategory.Where(n => n.CategoryId == item.CategoryId))
                            {
                                <p class="mb-2"> Danh mục: @itemCate.CategoryName</p>

                            }

                            <hr>

                            <p class="mb-3">
                                <span class="tag"> <i class="fa fa-check"></i> Verified</span>
                                <span class="tag"> 4 Years </span>
                                <span class="tag"> 60 reviews </span>
                                <span class="tag"> China </span>
                            </p>

                            <label class="custom-control mb-3 custom-checkbox">
                                <input type="checkbox" class="custom-control-input">
                                @*<div class="custom-control-label">
                                    Add to compare
                                </div>*@
                            </label>

                            <a href="#" class="btn btn-outline-primary"> <i class="fa fa-envelope"></i> Liên hệ </a>

                        </figcaption>
                    </figure>
                </div> <!-- col.// -->

            }


        </div> <!-- row end.// -->


        <nav class="mb-4" aria-label="Page navigation sample">
            <ul class="pagination">
                <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>


        <div class="box text-center">
            <p>Did you find what you were looking for？</p>
            <a href="" class="btn btn-light">Yes</a>
            <a href="" class="btn btn-light">No</a>
        </div>

    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
