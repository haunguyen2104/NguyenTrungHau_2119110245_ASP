@{
    ViewBag.Title = "tìm kiếm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .card-body {
        font-family: 'Poppins', sans-serif;
    }

    .width__table {
        overflow: scroll;
    }

    .btn-new {
        font-family: 'Poppins', sans-serif;
        margin: 5px 0;
        margin-left: 25px;
    }



    .search__product {
        max-width: 410px;
        margin: 0 auto;
        font-family: 'Poppins', sans-serif;
        margin-left: calc(100vw - 600px);
        margin-bottom: 10px;
        margin-top: -37px;
    }

    #SearchString {
        width: 200px;
        padding: 5px;
        border-radius: 10px;
        border: 0.5px solid #ccc;
    }

    input[type="submit"] {
        background-color: #ccc;
        border: none;
        font-family: 'Poppins', sans-serif;
        border-radius: 5px;
        padding: 5px;
        color: black;
    }

        input[type="submit"]:hover {
            background-color: #ff6a00;
            color: white;
        }
</style>


<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
    <div class="container">


        <!-- ============================  FILTER TOP  ================================= -->
        <!-- ============================ FILTER TOP END.// ================================= -->


        <div class="row">
            <main class="col-md-12">

                @{var quantity = ViewBag.NumberSearch;
                    var key = ViewBag.KeySearch;

                    <header class="mb-3">
                        <div class="form-inline">
                            <strong class="mr-md-auto">@quantity sản phẩm được tìm thấy bởi từ khoá @key</strong>
                        </div>
                    </header><!-- sect-heading -->
                }
                @foreach (var item in Model)
                {
                    //Lòng dữ liệu để convert
                    var price = Convert.ToDecimal((item.PriceDiscount == null) ? item.Price : item.PriceDiscount).ToString("#,##0");
                    var url = "/chi-tiet/" + item.Slug + "-" + item.Id;

                    <article class="card card-product-list">
                        <div class="row no-gutters">
                            <aside class="col-md-3">
                                <a href="@url" class="img-wrap">
                                    <img src="~/Public/images/product/@item.Avatar">
                                </a>
                            </aside> <!-- col.// -->
                            <div class="col-md-6">
                                <div class="info-main">
                                    <a href="@url" class="h5 title"> @item.Name </a>
                                    <div class="rating-wrap mb-2">
                                        <ul class="rating-stars">
                                            <li style="width:80%" class="stars-active">
                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </li>
                                            <li>
                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </li>
                                        </ul>
                                        <div class="label-rating">7/10</div>
                                    </div> <!-- rating-wrap.// -->

                                    <p class="mb-3">
                                        <span class="tag"> <i class="fa fa-check"></i> Verified</span>
                                        <span class="tag"> 4 Years </span>
                                        <span class="tag"> 60 reviews </span>
                                        <span class="tag"> China </span>
                                    </p>
                                    <p>
                                        @item.ShoetDes
                                    </p>

                                </div> <!-- info-main.// -->
                            </div> <!-- col.// -->
                            <aside class="col-sm-3">
                                <div class="info-aside">
                                    <div class="price-wrap">
                                        <span class="h5 price">@price</span>
                                        <small class="text-muted">/sản phẩm</small>
                                    </div> <!-- price-wrap.// -->
                                    <small class="text-success">Free shipping</small>

                                    <p class="text-muted mt-3">Guangzhou Electronic Co</p>
                                    <p class="mt-3">
                                        <a href="#" class="btn btn-outline-primary">
                                            <i class="fa fa-envelope"></i>
                                            Contact supplier
                                        </a>
                                        <a href="#" class="btn btn-light"><i class="fa fa-heart"></i> Save </a>
                                    </p>

                                    <label class="custom-control mt-3 custom-checkbox">
                                        <input type="checkbox" class="custom-control-input">
                                        <div class="custom-control-label">
                                            Add to compare
                                        </div>
                                    </label>

                                </div> <!-- info-aside.// -->
                            </aside> <!-- col.// -->
                        </div> <!-- row.// -->
                    </article> <!-- card-product .// -->
                }
                <p style="margin-left: 20px; font-family: 'Poppins', sans-serif; "> Trang @(Model.PageCount< Model.PageNumber ? 0: Model.PageNumber) of @Model.PageCount</p>

                <nav class="mb-4" aria-label="Page navigation sample">
                    <ul class="pagination">
                            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                        @for (int i = 1; i <= Model.PageCount; i++)
                        {
                            if (i==Model.PageNumber)
                            {

                            <li data-id="@i" class="page-item active"><a class="page-link" href="#">@i</a></li>
                            }
                            else
                            {
                            <li data-id="@i" class="page-item "><a class="page-link" href="#">@i</a></li>

                            }
                            
                        } 
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </main> <!-- col.// -->
        </div>
    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
