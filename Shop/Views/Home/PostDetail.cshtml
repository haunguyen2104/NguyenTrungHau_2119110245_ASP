@model Shop.Models.PostModel
@*@model Shop.Context.Post_2119110245*@

@{
    ViewBag.Title = "Nội dung bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .post__title{
        color:red;
    }
    h2, p {
        text-align: justify;
    }
    img {
        margin-left: calc((75vw - 1000px)/2)
    }
    li, ul,ol{
        text-align:left
    }
</style>
<div class="row">
    <div class="col-md-9">

        <h2 class="post__title">
            @Html.DisplayFor(model => model.objPost.PostTitle)

        </h2>
        <hr />
        <div class="dl-horizontal">
            <span class="@*post_Detail*@ text-center">
                @Html.Raw(Model.objPost.PostDetail)
            </span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="col-md d-none d-lg-block flex-grow-1">
            <aside class="special-home-right">
                <h6 class="bg-blue text-center text-white mb-0 p-2">Bài viết khác</h6>
            
                @foreach (var item in Model.listPost)
                {


                    <div class="card-banner border-bottom">
                        <div class="py-3" style="width:80%">
                            <h6 class="card-title">@item.PostTitle </h6>
                            <a href="@Url.Action("PostDetail","Home", new { id=item.PostId})" class="btn btn-secondary btn-sm"> Xem chi tiết </a>
                        </div>
                        <img src="~/Public/images/post/@item.PostAvatar" height="80" class="img-bg">
                    </div>
                }
                

            </aside>
        </div> <!-- col.// -->
    </div>
</div>