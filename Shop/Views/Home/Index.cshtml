<section class="padding-bottom">
    <header class="section-heading heading-line">
        <h4 class="title-section text-uppercase">Điện thoại</h4>
    </header>

    <div class="card card-home-category">
        <div class="row no-gutters">
            <div class="col-md-3">

                <div class="home-category-banner bg-light-orange">
                    <h5 class="title">Điện thoại - Tốt nhất mọi thời đại</h5>
                    <p>@*A smartphone is considered as a mobile computer combined with a digital camera and handheld game console, as it has a separate operating system designed to properly display web pages in a normal manner. often with many other functions of a computer such as design, graphics, video games, as well as photography and videography.*@ </p>
                    <a href="@Url.Action("ProductBrandList", "Product", new {@id = 24})" class="btn btn-outline-primary rounded-pill">Xem thêm</a>
                    <img src="~/Public/images/category/category-dien-thoai.jpg" class="img-bg">
                </div>

            </div> <!-- col.// -->
            <div class="col-md-9">
                <ul class="row no-gutters bordered-cols">
                    @foreach (var item in Model.listProduct.Where(n => n.BrandId == 24).Take(12))
                    {
                        var url = "/chi-tiet/" + item.Slug + "-" +item.Id;
                        <li class="col-6 col-lg-3 col-md-4">
                            <a href="@url" class="item">
                                <div class="card-body">
                                    <h6 class="title">@item.Name</h6>
                                    <img class="img-sm float-right" src="~/Public/images/product/@item.Avatar">
                                    @if (item.PriceDiscount != null)
                                    {
                                        //Sản phẩm có giảm giá
                                        <p class="text-muted">
                                            <i class="fa-solid fa-money-check-dollar"></i>
                                            @Convert.ToDecimal(item.PriceDiscount).ToString(" #,##0")<sup>đ</sup>
                                        </p>
                                    }
                                    else
                                    {
                                        //Sản phẩm không có giảm giá
                                        <p class="text-muted">
                                            <i class="fa-solid fa-money-check-dollar"></i>
                                            @Convert.ToDecimal(item.Price).ToString(" #,##0")<sup>đ</sup>
                                        </p>
                                    }
                                </div>
                            </a>
                        </li>
                    }
                </ul>
            </div> <!-- col.// -->
        </div> <!-- row.// -->
    </div> <!-- card.// -->
    <div class="view__all">
        <a href="#">Xem tất cả</a>
    </div>
</section>
<!-- =============== SECTION 1 END =============== -->
