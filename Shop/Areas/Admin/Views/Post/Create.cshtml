@model Shop.Context.Post_2119110245

@{
    ViewBag.Title = "Thêm mới bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";}
<script src="~/Public/ckeditor/ckeditor.js"></script>
<h2>Create</h2>


@using (Html.BeginForm("Create", "Post", FormMethod.Post, new { enctype = "multipart/from-data" }))
{
    @Html.AntiForgeryToken()

    <!-- Main content -->
    <section class="content my-2">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">thêm danh mục</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <button class="btn-sm btn-success" type="submit" name="create"> <i class="fas fa-save"></i> Lưu[Thêm]</button>
                        <a href="@Url.Action("Index","Post")" class="btn-sm btn-info"><i class="fas fa-arrow-circle-left"></i> Về danh sách</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9">
                        <div class="form-group">
                            <label>Tên danh muc <span class="text danger">(*)</span></label>
                            @Html.EditorFor(model => model.PostTitle, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PostTitle, "", new { @class = "text-danger" })

                        </div> <div class="form-group">
                            <label>Tên danh muc <span class="text danger">(*)</span></label>
                            @Html.TextAreaFor(model => model.PostDetail, new { htmlAttributes = new { @class = "form-control", @id = "PostDetail" } })
                            <script type="text/javascript" lang="javascript">
                                CKEDITOR.replace("PostDetail")
                            </script>
                            @Html.ValidationMessageFor(model => model.PostDetail, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            @*<label>Slug</label>
                                @Html.TextAreaFor(model => model.Slug, new { @class = "form-control", @rows = "1" })
                                @Html.ValidationMessageFor(model => model.Slug, "", new { @class = "text-danger" })*@

                        </div>

                    </div>
                    <div class="col-md-3">

                        <div class="from-group">
                            <label>Hình</label>
                            <input name="ImageUpload" type="file" class="from-control" />
                        </div>
                        <div class="form-group">
                            <label>Trạng thái</label>
                            @Html.DropDownListFor(model => model.status, new[] { new SelectListItem { Text = "Không xuất bản", Value = "2" }, new SelectListItem { Text = "Xuất bản", Value = "1" } }, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
