
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Shop.Context.Slider_2119110245>

@{
    ViewBag.Title = "Tất cả slider";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<style>
    .card-body {
        font-family: 'Poppins', sans-serif;
    }

    .width__table {
        overflow: scroll;
    }

    .btn-new {
        font-family: 'Poppins', sans-serif;
        margin: 5px 0;
        margin-left: 15px;
    }

    .search__form {
        max-width: 410px;
        margin: 0 auto;
        font-family: 'Poppins', sans-serif;
        margin-left: calc(100vw - 600px);
        margin-bottom: 10px;
        margin-top: -37px;
    }

    #SearchString {
        width: 200px;
        padding: 5px;
        border-radius: 10px;
        border: 0.5px solid #ccc;
    }

    input[type="submit"] {
        background-color: #ccc;
        border: none;
        font-family: 'Poppins', sans-serif;
        border-radius: 5px;
        padding: 5px;
        color: black;
    }

        input[type="submit"]:hover {
            background-color: #ff6a00;
            color: white;
        }

    #myTable {
        width: 1000px;
        margin-left: calc((100vw  - 1260px)/2);
    }
    #page__number {
        margin-left: 230px;
        margin-top: 20px;
    }
</style>



<a href="@Url.Action("Create","Slider")" class="btn btn-default btn-new"><i class="fa fa-plus" style="color:green; font-weight:600;"></i> Thêm mới</a>


@*-----------------------*@
@using (Html.BeginForm("Index", "Slider", FormMethod.Get))
{
    <p class="search__form">
        Tìm kiếm sản phẩm: @Html.TextBox("SearchString", ViewBag.CurrentFilter as String)
        <input type="submit" value="Tìm kiếm" class="btn-outline-danger" />
        <a href="@Url.Action("Index","Slider")" style="font-family: 'Poppins', sans-serif;margin-left:50px;margin-top:10px;">Xem tất cả hình ảnh</a>
    </p>
}
<div class="card-body">

    <table class="table table-bordered table-striped" id="myTable">
        <thead>
            <tr>

                <th class="text-center" style="width:20px;">STT</th>
                <th class="text-center" style="width:300px;">Hình</th>

                <th>  Tên sản phẩm</th>

                <th class="text-center" style="width:180px;">Chức năng</th>
                <th class="text-center" style="width:20px;">ID </th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        <input type="checkbox" name="checkId" value="" />
                    </td>
                    <td><img src="~/Public/images/slider/@item.Avatar" alt="Tenhinh" class="img-fluid" /></td>
                    <td>@item.Name</td>
                    @*<td>@item.CategoryId </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOnUtc)
                        </td>*@
                    <td class="text-center">

                        <a href="@Url.Action("Edit", "Product", new { id = item.Id }) " style="color:blue"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="@Url.Action("Details", "Product", new { id = item.Id }) " style="color:green"><i class="fa-solid fa-eye"></i></a>
                        <a href="@Url.Action("Delete", "Product", new { id = item.Id }) " style="color:red"><i class="fa-solid fa-trash"></i></a>


                    </td>
                    <td>@item.Id</td>

                </tr>
            }
        </tbody>

    </table>


    <div id="page__number">
        <p style="margin-left: 20px; font-family: 'Poppins', sans-serif; "> Trang @(Model.PageCount< Model.PageNumber ? 0: Model.PageNumber) of @Model.PageCount</p>

        @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, currentFilter = ViewBag.CurrentFilter }))
    </div>

</div>
