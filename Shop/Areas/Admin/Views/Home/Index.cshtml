@model Shop.Models.DashboardModel
@{
    ViewBag.Title = "Trang chủ";
}



<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản trị</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a>Trang chủ</a></li>
                    <a href="~/Areas/Admin/Views/Home/Index.cshtml">~/Areas/Admin/Views/Home/Index.cshtml</a>
                    <li class="breadcrumb-item active">Quản trị</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.listProduct.Count</h3>

                        <p>Sản phẩm</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="@Url.Action("Index", "Product")" class="small-box-footer">Xem thêm <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-light">
                    <div class="inner">

                        <h3>
                            @Model.DeliverySuccessful<sup style="font-size: 20px">%</sup>
                            <span style="font-size:17px; font-weight:normal;font-style:italic"> @Model.OrderSuccess/@Model.listOrder.Count <span>đơn hàng</span></span>
                        </h3>


                        <p>Đơn hàng thành công</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>

                    </div>
                    <a href="@Url.Action("Index","Order")" class="small-box-footer">Xem thêm <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.listUser.Count</h3>

                        <p>Thành viên</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="@Url.Action("Index","User")" class="small-box-footer">Xem thêm <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->

                <div class="small-box bg-danger">
                    <div class="inner">
                        @{
                            var sumprice = Model.listOrderDetail.Sum(n => n.TotalPrice);
                        }
                        <h3><span >@Convert.ToDecimal(sumprice).ToString("#,##0")<sup>đ</sup></span></h3>

                        <p>Tổng doanh thu</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>

                    </div>
                    <a class="small-box-footer" style="opacity:0">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.listOrder.Count</h3>

                        <p>Đơn hàng</p>
                    </div>
                    <div class="icon">
                        <i class="fa-solid fa-cart-plus"></i>
                    </div>
                    <a href="#" class="small-box-footer">Xem thêm <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
